<%= form_for(call) do |f| %>
  <% if call.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(call.errors.count, "error") %> prohibited this call from being saved:</h2>

      <ul>
      <% call.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :called_at %>
    <%= f.datetime_select :called_at, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :duration %>
    <%= f.number_field :duration, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :internal_id %>
    <%= f.select :internal_id, options_for_select(Internal.all.map { |internal| [internal.name, internal.id] }), {}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :call_type_id %>
    <%= f.select :call_type_id, options_for_select(CallType.all.map { |call_type| [call_type.name, call_type.id] }), {}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :rings %>
    <%= f.number_field :rings, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
